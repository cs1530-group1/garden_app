<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"


    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/species_list_activity_button"
        android:id="@+id/species_list_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="startSpeciesListActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/garden_view_activity_button"
        android:id="@+id/garden_view_button"
        android:layout_below="@+id/species_list_button"
        android:layout_alignLeft="@+id/species_list_button"
        android:layout_alignStart="@+id/species_list_button"
        android:layout_alignRight="@+id/species_list_button"
        android:layout_alignEnd="@+id/species_list_button"
        android:onClick="startGardenViewActivity" />


</RelativeLayout>
